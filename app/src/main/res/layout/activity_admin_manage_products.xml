<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="60dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    tools:context=".AdminManageProductsActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <ImageView
            android:id="@+id/item_product_image_maintain"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/item_product_name"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            />

        <EditText
            android:id="@+id/item_product_name_maintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:layout_below="@+id/item_product_image_maintain"
            android:background="@drawable/input_design"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            />

        <EditText
            android:id="@+id/item_product_price_maintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product price"
            android:maxLength="7"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_design"
            android:padding="10dp"
            android:layout_below="@+id/item_product_name_maintain"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"

            />

        <EditText
            android:id="@+id/item_product_description_maintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product descripton"
            android:background="@drawable/input_design"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/item_product_price_maintain"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/updateProduct_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Update Product"
            android:background="@drawable/buttons"
            android:backgroundTint="@color/yellow"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/item_product_description_maintain"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/deteleteProduct_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Delete Product"
            android:background="@drawable/buttons"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/updateProduct_Btn"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            />





    </RelativeLayout>

</androidx.cardview.widget.CardView>